{
  "index_patterns": [
    "modoojeonse-news-*"
  ],
  "template": {
    "settings": {
      "index": {
        "analysis": {
          "filter": {
            "search_shingle": {
              "max_shingle_size": "3",
              "token_separator": "",
              "type": "shingle"
            }
          },
          "analyzer": {
            "search_nori_analyzer": {
              "filter": [
                "search_shingle",
                "lowercase"
              ],
              "tokenizer": "search_nori_tokenizer"
            }
          },
          "tokenizer": {
            "search_nori_tokenizer": {
              "type": "nori_tokenizer",
              "decompound_mode": "discard"
            }
          }
        },
        "number_of_shards": "5",
        "sort.field": "@timestamp",
        "sort.order": "desc"
      }
    },
    "aliases" : {
        "modoojeonse-news" : {}
    },
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "title": {
          "search_analyzer": "search_nori_analyzer",
          "analyzer": "search_nori_analyzer",
          "type": "text"
        },
        "summary_text": {
          "search_analyzer": "search_nori_analyzer",
          "analyzer": "search_nori_analyzer",
          "type": "text"
        },
        "body_text": {
          "search_analyzer": "search_nori_analyzer",
          "analyzer": "search_nori_analyzer",
          "type": "text"
        },
        "html": {
          "type": "text"
        },
        "publisher": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword"
            }
          }
        },
        "author": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword"
            }
          }
        },
        "url": {
          "type": "text"
        }
      }
    }
  }
}